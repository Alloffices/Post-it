<div class="container new-project-heading"><h3>Edit Project</h3>
</div>
<hr />
<div class="container">
	<div class="new-form">
		<%= form_for @post do |f| %>
		<form>
  			<div class="form-group">
  				<div class="edit-project-image">
	  				<%= image_tag @post.image.url(:medium) %>
  				</div>
				<div>
				    <%= f.file_field :image, class: "form-control", placeholder: "Upload Image" %>
				    <div class="new-form-hints">
					    <p><small>Change or Upload your project image.</small></p>
				    </div>
				</div>
				<div>
					<%= f.text_field :title, class: "form-control", placeholder: "Project Title" %>
					<div class="new-form-hints">
						    <p><small>Edit your project title.</small></p>
					</div>
				</div>
				<hr />
				<div>
					<%= f.text_area :description, class: "form-control", placeholder: "Description" %>
				</div>
				<div class="new-form-hints">
	    			<p><small>Let people know what the project plan is.</small></p>
				</div>
				<br />
				<div>
					<%= f.submit class: "btn  btn-primary btn-block" %>
				</div>
			</div>
		</form>
		<% end %>
	</div>
</div>