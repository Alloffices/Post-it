<!DOCTYPE html>
<html>
<head>
  <title>DonWydens</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-fixed-top navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <%= link_to "Nobbble", root_path, class: "navbar-brand" %>


    <!-- Collect the nav links, forms, and other content for toggling -->

        <% if user_signed_in? %>
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
          <a href="#" class="dropdown-toggle mobile-options" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= image_tag current_user.image.url(:medium), class: "round-avatar-mobile" %><span class="caret"></span></a>

            <ul class="dropdown-menu">
              <li><%= link_to "Settings", edit_user_registration_path(@user) %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
      <% else %>
        <div class="desktop-signin">
          <div class="nav-signin-signup">
            <li><%= link_to "Sign in", new_user_session_path, class: "btn btn-success" %></li>
          </div>
        </div>
        </ul>
      <% end %>
<!-- <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
          </div>
      </form> -->
    </div><!-- /.navbar-collapse -->
  </div>
</nav>


<%= yield %>

<div class="navbar navbar-fixed-bottom navbar-default">
  <div class="btn-group btn-group-justified demoPadder" role="group" aria-label="Justified button group">
<% if current_user.try(:admin) %>
      <%= link_to "", root_path,   class: "btn btn-default glyphicon glyphicon-th" %>
      <%= link_to "", users_path, class: "btn btn-default glyphicon glyphicon-search" %>
      <%= link_to "", new_post_path, class: "btn btn-default glyphicon glyphicon-paperclip" %>
      <%= link_to "", current_user, class: "btn btn-default glyphicon glyphicon-user" %>
<% else %>
      <%= link_to "", root_path,   class: "btn btn-default glyphicon glyphicon-th" %>
      <%= link_to "", users_path, class: "btn btn-default glyphicon glyphicon-search" %>
      <%= link_to "", current_user, class: "btn btn-default glyphicon glyphicon-user" %>
<% end %>
  </div>
</div>

</body>
</html>
