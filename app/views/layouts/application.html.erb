<!DOCTYPE html>
<html>
<head>
  <title>DonWydens</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-fixed-top navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <%= image_tag current_user.image.url(:small), class: "round-avatar" %>
      </button>
      <%= link_to "Home", root_path, class: "navbar-brand" %>

    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <% else %>
        	<li><%= link_to "Signin", new_user_session_path %></li>
        	<li><%= link_to "Signup", new_user_registration_path %></li>
    	<% end %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= image_tag current_user.image.url(:small), class: "round-avatar" %><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Settings", edit_user_registration_path(@user) %></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
      </ul>
<!--         <form class="navbar-form navbar-left" role="search">
	        <div class="form-group">
	          <input type="text" class="form-control" placeholder="Search">
	        </div>
	    </form> -->
    </div><!-- /.navbar-collapse -->
  </div>
</nav>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<div class="navbar navbar-fixed-bottom navbar-default">
  <div class="btn-group btn-group-justified demoPadder" role="group" aria-label="Justified button group">

      <%= link_to "", root_path,   class: "btn btn-default glyphicon glyphicon-th" %>
      <%= link_to "", users_path, class: "btn btn-default glyphicon glyphicon-search" %>
      <%= link_to "", new_post_path, class: "btn btn-default glyphicon glyphicon-paperclip" %>
      <%= link_to "", current_user, class: "btn btn-default glyphicon glyphicon-user" %>
  </div>
</div>

<%= yield %>

</body>
</html>
